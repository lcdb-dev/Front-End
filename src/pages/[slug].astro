import { renderArticleContent } from "../utils/renderArticleContent";

export const prerender = true;

const getBuildLimit = () => {
  const envLimit = Number(process.env.MAX_SSG_ARTICLES);
  return Number.isFinite(envLimit) && envLimit > 0 ? envLimit : 50;
};

// Expensive per-page related queries are opt-in to keep CI/deploy builds fast.
const shouldBuildRelated = process.env.BUILD_RELATED === "1";

export async function getStaticPaths() {
  let articles: any[] = [];

  const decodeSafe = (value: string) => {
    try {
      return decodeURIComponent(value);
    } catch {
      return value;
    }
  };

  try {
    articles = await getAllArticlesFromMongo();
  } catch (error) {
    console.error(
      "⚠️ getAllArticlesFromMongo failed, falling back to Payload:",
      error,
    );
  }

  if (!articles || articles.length === 0) {
    try {
      const payloadResponse: any = await payloadFetch({
        collection: "articles",
        query: { depth: 2, limit: getBuildLimit() },
      });
      articles = payloadResponse?.docs || payloadResponse || [];
    } catch (error) {
      console.error("⚠️ payloadFetch fallback failed:", error);
    }
  }

  if (!Array.isArray(articles)) return [];

  return articles
    .filter((article: any) => article?.slug)
    .map((article: any) => {
      const rawSlug =
        typeof article.slug === "string"
          ? article.slug
          : article.slug?.current || "";
      const slugValue = decodeSafe(rawSlug);
      return {
        params: { slug: slugValue },
        props: { article: { ...article, slug: slugValue } },
      };
    });
}

interface Props {
  article: any;
}

const { article } = Astro.props;
if (!article) {
  throw new Error("Article data missing at build time");
}
const slug =
  typeof article.slug === "string" ? article.slug : article.slug?.current || "";

// For SSG, we can't fetch comments at build time as they change frequently
// Comments will be loaded client-side using Disqus
// TODO: Replace Payload comments with client-side SaaS comments
const comments = [];

// For SSG: Fetch related articles at build time
let relatedArticles: any[] = [];
if (article && shouldBuildRelated) {
  try {

    // First try to get articles by category
    if (article.categories && article.categories.length > 0) {
      const categoryIds = article.categories
        .map((cat: any) => {
          if (typeof cat === "string") return cat;
          if (cat && cat._id) return cat._id;
          if (cat && cat.id) return cat.id;
          return cat;
        })
        .filter((id) => id);

      relatedArticles = await getRelatedArticlesFromMongo(
        categoryIds,
        article._id,
        3,
      );
    }

    // If no category-based results, get random articles
    if (!relatedArticles || relatedArticles.length === 0) {

      const db = await getMongoConnection();
      const articlesCollection = db.collection("articles");

      // Get 3 random articles excluding current one
      const randomArticles = await articlesCollection
        .aggregate([
          { $match: { _id: { $ne: article._id } } },
          { $sample: { size: 3 } },
        ])
        .toArray();

      relatedArticles = randomArticles.map((doc) => ({
        _id: doc._id?.toString(),
        ...doc,
      }));
    }
  } catch (error) {
    console.error("❌ [RELATED] Error fetching related articles:", error);
    relatedArticles = [];
  }
}

// Helper: Extract title
const getTitle = () => {
  if (!article) return "Untitled";
  return article.title || "Untitled";
};

// Helper: Extract content (contentV2 first, legacy fallback)
const getContent = () => renderArticleContent(article);

// Helper: Extract excerpt
const getExcerpt = () => {
  if (!article) return "";
  if (typeof article.excerpt === "string") {
    return article.excerpt.substring(0, 160);
  }
  if (Array.isArray(article.excerpt)) {
    return article.excerpt
      .map(
        (block: any) =>
          block.children?.map((child: any) => child.text).join(" ") || "",
      )
      .join(" ")
      .substring(0, 160);
  }
  return "";
};

// Helper: Extract image
const getImage = () => {
  if (!article) return "";
  return processArticleImageUrl(article);
};

// Helper: Extract image alt text
const getImageAlt = () => {
  if (!article) return "";
  if (article.featuredMedia?.alt) {
    return article.featuredMedia.alt;
  }
  if (article.featuredImage?.alt) {
    return article.featuredImage.alt;
  }
  if (article.featured_image?.alt) {
    return article.featured_image.alt;
  }
  return "Article featured image";
};

// Helper: Decode HTML entities
const decodeHtmlEntities = (text: string): string => {
  if (!text) return "";

  let decoded = text;

  // Handle common HTML entities
  const entityMap: Record<string, string> = {
    "&nbsp;": " ",
    "&quot;": '"',
    "&amp;": "&",
    "&lt;": "<",
    "&gt;": ">",
    "&apos;": "'",
    "&#039;": "'",
    "&rsquo;": "'",
    "&lsquo;": "'",
    "&rdquo;": '"',
    "&ldquo;": '"',
    "&ndash;": "–",
    "&mdash;": "—",
    "&hellip;": "…",
    "&copy;": "©",
    "&reg;": "®",
    "&deg;": "°",
  };

  for (const [ent, char] of Object.entries(entityMap)) {
    decoded = decoded.split(ent).join(char);
  }

  return decoded;
};

// Prepare final values
const title = getTitle();
const content = getContent();
const excerpt = getExcerpt();
const image = getImage();
const imageAlt = getImageAlt();

if (!article) {
  return new Response("Article not found", { status: 404 });
}

// Build JSON-LD schemas
const articleJsonLd = buildArticleJsonLd(
  article,
  "https://lacuisinedebernard.com",
);
const breadcrumbJsonLd = buildBreadcrumbJsonLd(
  article.title,
  "https://lacuisinedebernard.com",
);
const recipeJsonLd = buildRecipeJsonLd(article);

// Format date
const date = article.date
  ? new Date(article.date).toLocaleDateString("en-US", {
      year: "numeric",
      month: "long",
      day: "numeric",
    })
  : "";

// Prepare SEO data
const keywords = article.tags?.map((t: any) => t.title || t.name).join(", ") || title;
const publishDate = article.date || new Date().toISOString();
const modifiedDate = article.modified || article.updated || publishDate;
const author = article.author?.name || "La Cuisine De Bernard";
const articleUrl = `https://lacuisinedebernard.com/${slug}`;
