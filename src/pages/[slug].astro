<script>
  document.addEventListener("DOMContentLoaded", () => {
    // ===== WordPress Recipe Ingredient Servings Multiplier =====
    const servingButtons = document.querySelectorAll(
      ".wprm-recipe-adjustable-servings",
    );
    const ingredientAmounts = document.querySelectorAll(
      ".wprm-recipe-ingredient-amount",
    );

    // Store original amounts
    const originalAmounts = new Map();
    ingredientAmounts.forEach((el, index) => {
      originalAmounts.set(index, parseFloat(el.textContent));
    });

    servingButtons.forEach((button) => {
      button.addEventListener("click", () => {
        const multiplier = parseInt(button.dataset.multiplier);

        // Update all ingredient amounts
        ingredientAmounts.forEach((el, index) => {
          const original = originalAmounts.get(index);
          if (original) {
            const updated = original * multiplier;
            // Round to 2 decimal places
            el.textContent =
              updated % 1 === 0 ? updated.toString() : updated.toFixed(2);
          }
        });
      });
    });
  });
</script>

